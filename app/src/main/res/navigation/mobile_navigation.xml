<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/dashboard_page">

    <fragment
            android:id="@+id/dashboard_page"
            android:name="com.example.iatimetableapp.ui.dashboard.DashboardFragment"
            android:label="@string/title_dashboard"
            tools:layout="@layout/fragment_dashboard" />

    <fragment
            android:id="@+id/weekly_page"
            android:name="com.example.iatimetableapp.ui.weekly.WeeklyFragment"
            android:label="@string/title_weekly"
            tools:layout="@layout/fragment_weekly" />

    <fragment
            android:id="@+id/tasks_page"
            android:name="com.example.iatimetableapp.ui.tasks.tasksFragment"
            android:label="@string/title_tasks"
            tools:layout="@layout/fragment_tasks" />
    <fragment
            android:id="@+id/options_page"
            android:name="com.example.iatimetableapp.ui.settings.settingsFragment"
            android:label="@string/title_options"
            tools:layout="@layout/fragment_settings"/>
</navigation>